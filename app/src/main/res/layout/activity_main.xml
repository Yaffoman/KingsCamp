<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <android.support.design.button.MaterialButton
        android:id="@+id/plant_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/mammal_button"
        app:layout_constraintEnd_toStartOf="@id/bird_button"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="@string/plants"
        android:onClick="onButtonClick" />


    <android.support.design.button.MaterialButton
        android:id="@+id/bird_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:onClick="onButtonClick"
        android:text="@string/birds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/plant_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/plant_button"
        app:layout_constraintTop_toTopOf="@id/plant_button" />

    <android.support.design.button.MaterialButton
        android:id="@+id/mammal_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:onClick="onButtonClick"
        android:text="@string/mammals"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/plant_button"
        app:layout_constraintStart_toStartOf="@+id/plant_button"
        app:layout_constraintTop_toBottomOf="@id/plant_button" />


    <android.support.design.button.MaterialButton
        android:id="@+id/reptile_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:onClick="onButtonClick"
        android:text="@string/reptilesandamphibians"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/bird_button"
        app:layout_constraintStart_toStartOf="@+id/bird_button"
        app:layout_constraintTop_toBottomOf="@id/plant_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/textview"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="@+id/plant_button"
        app:layout_constraintTop_toBottomOf="@+id/mammal_button" />

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:progress="50"

        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView" />


</android.support.constraint.ConstraintLayout>