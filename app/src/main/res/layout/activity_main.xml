<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <FrameLayout
        android:id="@+id/plant_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/mammal_frame"
        app:layout_constraintEnd_toStartOf="@id/bird_frame"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread">

        <ProgressBar
            android:id="@+id/plant_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_states"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/plant_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/plants" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bird_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/plant_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/plant_frame"
        app:layout_constraintTop_toTopOf="@id/plant_frame">

        <ProgressBar
            android:id="@+id/bird_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_states"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/bird_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/birds" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mammal_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/plant_frame"
        app:layout_constraintStart_toStartOf="@+id/plant_frame"
        app:layout_constraintTop_toBottomOf="@id/plant_frame">

        <ProgressBar
            android:id="@+id/mammal_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:progressDrawable="@drawable/progress_bar_states" />

        <android.support.design.button.MaterialButton
            android:id="@+id/mammal_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/mammals" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/reptile_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/bird_frame"
        app:layout_constraintStart_toStartOf="@+id/bird_frame"
        app:layout_constraintTop_toBottomOf="@id/plant_frame">

        <ProgressBar
            android:id="@+id/reptile_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_states"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/reptile_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onButtonClick"
            android:text="@string/reptilesandamphibians" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="@+id/plant_frame"
        app:layout_constraintTop_toBottomOf="@+id/mammal_frame"
        android:maxHeight="100dp"
        android:elevation="10dp" />

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar_states_bottombar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView" />


</android.support.constraint.ConstraintLayout>